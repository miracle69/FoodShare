<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MyActivity">


    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="#188e9a"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/logo"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:id="@+id/my_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="zs"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            >

        <!-- 基本信息 我的收藏 排行榜 退出 -->

            <!-- 第一个start-->
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <!-- 圆形按钮start-->
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/my_scTv"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@mipmap/my_sc"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="#6200EE"
                        android:textAlignment="center"

                        >
                    </TextView>
                </LinearLayout>
                <!-- 圆形按钮end-->
                <!-- 字体start-->
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:text="我的收藏"
                        android:textSize="16sp"
                        >
                    </TextView>
                </LinearLayout>
                <!-- 字体end-->
            </LinearLayout>
            <!-- 第一个end-->

            <!-- 第二个start-->
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <!-- 圆形按钮start-->
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/my_rankTv"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@mipmap/my_rank"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="#6200EE"
                        android:textAlignment="center"
                        >
                    </TextView>
                </LinearLayout>
                <!-- 圆形按钮end-->
                <!-- 字体start-->
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"

                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:text="排行榜"
                        android:textSize="16sp"
                        >
                    </TextView>
                </LinearLayout>
                <!-- 字体end-->
            </LinearLayout>
            <!-- 第二个end-->

            <!-- 第三个start-->
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <!-- 圆形按钮start-->
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/my_baseinfo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@mipmap/my_jb"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="#6200EE"
                        android:textAlignment="center"
                        >
                    </TextView>
                </LinearLayout>
                <!-- 圆形按钮end-->
                <!-- 字体start-->
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:text="基本信息"
                        android:textSize="16sp">
                    </TextView>
                </LinearLayout>
                <!-- 字体end-->
            </LinearLayout>
            <!-- 第三个end-->


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            >

            <!-- 第三个start-->
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <!-- 圆形按钮start-->
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/my_exit"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@mipmap/my_exit"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="#6200EE"
                        android:textAlignment="center"
                        >
                    </TextView>
                </LinearLayout>
                <!-- 圆形按钮end-->
                <!-- 字体start-->
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:text="退出"
                        android:id="@+id/logout"
                        android:textSize="16sp">
                    </TextView>
                </LinearLayout>
                <!-- 字体end-->
            </LinearLayout>
            <!-- 第三个end-->
        </LinearLayout>




    </LinearLayout>

</LinearLayout>